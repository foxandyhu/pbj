<style>
	.panel-success1 {border-color: rgba(132, 86, 70, 0.19);}
	.panel-success>.panel-heading1{background-color: #ECF0F5;color:#333;border-color:rgba(132, 86, 70, 0.19);}
	.ztree * {font-size: 14px;}.ztree li a.curSelectedNode {z-index:10000;position: relative;}
</style>
<section class="content-header">
    <h1>角色设置</h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
      <li class="active">组织结构</li>
      <li class="active">角色设置</li>
    </ol>
</section>
<section class="content" ng-init="initSysRole()">
	<div class="box box-danger"></div>
	<div class="content">
		<div class="row">
			<div class="col-lg-2">
				<div class="panel panel-success1 panel-success" style="min-height:500px;">
					<div class="panel-heading1 panel-heading">
					      <h3 class="panel-title"><span class="glyphicon glyphicon-leaf" style="color: rgb(212, 106, 64);"></span> 角色列表</h3>
					</div>						
					<div class="panel-body">
						<div id="roleTree" class="ztree"></div>
					</div>
				</div>
			</div>
			<div class="col-lg-9 well" id="menuListCc" ng-show="role">
				<div class="row">
					<div class="col-lg-6 text-left">
						<div id="roleDetailCc">
							<ng-include src="'system/sys_role_detail.html'"></ng-include>
							<ng-include src="'system/sys_role_users.html'"></ng-include>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="panel panel-success1 panel-success">
							<div class="panel-heading1 panel-heading">
							      <h3 class="panel-title"><span class="glyphicon glyphicon-wrench" style="color: rgb(212, 106, 64);"></span> 可操作功能</h3>
							</div>
   							<div class="panel-body">
   								<div id="funTree" class="ztree"></div>
							</div>
						</div>							
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<div class="modal fade" id="assignUsersModal" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title">系统用户</h4>
			</div>
			<div class="modal-body">
				<ng-include src="'system/sys_role_users_unassign.html'"></ng-include>				
				<div class="text-right">
				  <pager page-count="pageCount" current-page="currentPage" on-page-change="loadUnassignSysUsers(scope)" first-text="首页" next-text="下一页" prev-text="上一页" last-text="尾页" show-goto="true" goto-text="跳转到"></pager>
				</div>
			</div>
		</div>
	</div>
</div>
<span ng-init="initSysRoleValidate()"></span>