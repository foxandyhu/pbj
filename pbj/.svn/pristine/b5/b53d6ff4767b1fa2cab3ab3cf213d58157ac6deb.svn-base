<section class="content-header">
    <h1>RFID主机管理</h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
      <li class="active">设备管理</li>
      <li class="active">RFID主机管理</li>
    </ol>
</section>
<section class="content" ng-init="loadPedometerReader()">
	<div class="box box-danger"></div>
	<nav>
		<a class="btn btn-warning" ng-click="loadPedometerReader()"><span class="glyphicon glyphicon-refresh"></span> 刷新</a>
		<a class="btn btn-danger" href="#/pedometer/reader/add"><span class="glyphicon glyphicon-plus"></span> 新增</a>
	</nav>	
	<table class="table table-striped table-hover table-bordered">
		<thead>
			<tr>
				<th width="8%">编号</th><th width="20%">安装地址</th><th width="20%">联网状态</th>
				<th width="15%">是否启用</th><th width="10%">最后通讯</th><th width="10">操作</th>
			</tr>
		</thead>
		<tbody>
			<tr ng-repeat="item in items">
				<td>{{item.serialNo}}</td><td>{{item.address}}</td><td>{{item.online?"联网":"离线"}}</td>
				<td><a ng-click="enablePedometerReader()" class="btn btn-xs {{item.enable?'btn-success':'btn-danger'}}">{{item.enable?"已启用":"已禁用"}}</a></td>
				<td>{{item.lastComm}}</td>
				<td>{{item.remark}}</td>
				<td>
					<a class="btn btn-info btn-xs" href="#/pedometer/reader/{{item.serialNo}}">
						<span class="glyphicon glyphicon-edit"></span> 查看
					</a>
					<a class="btn btn-danger btn-xs" ng-click="delPedometerReader()">
						<span class="glyphicon glyphicon-trash"></span> 删除
			      	</a>					
				</td>
			</tr>
		</tbody>
	</table>
	<div class="text-right">
	  <pager page-count="pageCount" current-page="currentPage" on-page-change="loadPedometerReader()" first-text="首页" next-text="下一页" prev-text="上一页" last-text="尾页" show-goto="true" goto-text="跳转到"></pager>
	</div>	
</section>