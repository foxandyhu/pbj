<div class="panel panel-success1 panel-success">
	<div class="panel-heading1 panel-heading">
	      <h3 class="panel-title"><span class="glyphicon glyphicon-pencil" style="color: rgb(212, 106, 64);"></span> 
	      	<span>角色详细</span>
	      </h3>
	</div>						
	<div class="panel-body">
		<form class="form-horizontal" role="form" id="roleForm">
			<div class="form-group">
				<label for="menuName" class="col-lg-2"><span class="red">*</span>名称:</label>
				<div class="col-lg-10">
					<input class="form-control" type="text" name="name" ng-model="role.name" placeholder="请输入角色名称!" maxlength="10"/>
				</div>
			</div>
			<div class="form-group">
				<label for="menuSeq" class="col-lg-2">排序:</label>
				<div class="col-lg-10">
					<input class="form-control" type="text" name="seq" ng-model="role.seq" placeholder="请输入角色排序序号!"/>
				</div>
			</div>
			<div class="form-group">
				<label for="menuSeq" class="col-lg-2">启用:</label>
				<div class="col-lg-10">
					<input  ng-model="role.enable" ng-checked="role.enable" name="enable" type="checkbox"/>
				</div>
			</div>
			<div class="form-group">
				<label for="menuRemark" class="col-lg-2">备注:</label>
				<div class="col-lg-10">
					<textarea class="form-control" name="remark" ng-model="role.remark" type="text" maxlength="200"></textarea>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-warning" ng-click="editSysRole()"><i class="fa fa-fw fa-save"></i>保 存</button>
			</div>										
		</form>
	</div>
</div>