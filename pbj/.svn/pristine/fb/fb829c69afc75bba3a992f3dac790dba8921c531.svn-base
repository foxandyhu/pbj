<style type="text/css">.ztree li span{font-size:16px;}.ztree li a.level0 span {font-size: 150%;font-weight: bold;}</style>
<div class="row">
	<div class="col-xs-2">
		<div class="btn-group">
			 <a class="btn btn-danger" ng-click="syncWxMenu()"><span class="fa fa-fw fa-cloud-download"></span> 同步微信菜单</a>
		</div>
		<div class="cls"></div>
		<ul id="weixinMenuTree" class="ztree"></ul>
	</div>
	<div class="col-xs-9" id="menuDetail" ng-show="menuItem">
		<form action="manage/weixin/menu/edit.html" method="post" id="menuForm">
			<input type="hidden" name="id" value="{{menuItem.id}}" ng-model="menuItem.id"/>
			<table class="table table-bordered">
			   	<tr>
			    	<td class="infobg col-md-1 text-right"><span class="red">*</span>名&nbsp;&nbsp;称:</td>
			    	<td class="col-md-11">
			    		<input type="text" class="form-control" maxlength="8" name="name" value="{{menuItem.name}}" ng-model="menuItem.name" placeholder="请输入菜单名称" autocomplete="off">
			    	</td>
			    </tr>
			    <tr>
			    	<td class="infobg col-md-1 text-right"><span class="red">*</span>类&nbsp;&nbsp;型:</td>
			    	<td class="col-md-11">
			    		<label><input type="radio" name="type" ng-model="menuItem.type" value="view" ng-checked="{{menuItem.type == 'view'}}"/>连接</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			    		<label><input type="radio" name="type" ng-model="menuItem.type" value="scancode_waitmsg" ng-checked="{{menuItem.type == 'scancode_waitmsg'}}" />扫码事件</label>
			    	</td>
			    </tr>	    
			   	<tr>
			    	<td class="infobg col-md-1 text-right"><span class="red">*</span>Key &nbsp;ID:</td>
			    	<td class="col-md-11">
			    		<input type="text" class="form-control" maxlength="128" name="key" ng-model="menuItem.key" value="{{menuItem.key}}"  placeholder="请输入KEYID" autocomplete="off">
			    	</td>
			    </tr>
			   	<tr>
			    	<td class="infobg col-md-1 text-right"><span class="red">*</span>url连接:</td>
			    	<td class="col-md-11">
			    		<input type="text" class="form-control" maxlength="256" name="url" ng-model="menuItem.url" value="{{menuItem.url}}" placeholder="请输入连接地址" autocomplete="off">
			    	</td>
			    </tr>
			</table>
		</form>
		<div class="col-md-12 text-center">
		   <button type="button" ng-click="editWxMenu()" class="btn btn-warning"><i class="fa fa-fw fa-save"></i>保 存</button>
		</div>
	</div>
</div>